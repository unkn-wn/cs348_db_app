// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Ingredient {
  id         Int        @id @default(autoincrement())
  name       String
  quantity   Float
  unit       String
  recipeId   Int

  recipe     Recipe     @relation(fields: [recipeId], references: [id]) // One to many: each recipe can have multiple ingredients
}

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  password  String      // no encryption yet
  ratings   Rating[]                            // One to many: a user can rate multiple recipes
  favorites Recipe[]    @relation("Favorites")  // Many to many: users can favorite multiple recipes, and recipes can be favorited by multiple users
}

model Recipe {
  id            Int     @id @default(autoincrement())
  name          String
  description   String?
  prepTime      Int
  cuisineType   String?
  ingredients   Ingredient[]                    // One to many: each recipe is composed of several ingredients
  ratings       Rating[]                        // One to many: each recipe can receive multiple ratings
  favoritedBy   User[]  @relation("Favorites")  // Many to many: recipes can be favorited by many users
}

model Rating {
  id       Int          @id @default(autoincrement())
  score    Int          // rating out of 5
  userId   Int
  recipeId Int

  user     User         @relation(fields: [userId], references: [id])   // One to many: a rating is associated with one user
  recipe   Recipe       @relation(fields: [recipeId], references: [id]) // One to many: a rating is associated with one recipe
}
